// pantheon-codespaces-wordpress-example-q74qxx563rvp
// URL is something like:
// https://pantheon-codespaces-wordpress-example-q74qxx563rvp-8080.githubpreview.dev/
SITE_NAME=$(php <<"EOF"
<?php
$site_data = yaml_parse_file(__DIR__ . "/.devcontainer/local-dev-files/site-config.yml");
echo $site_data['site_name'];
EOF
)
SITE_ENV=$(php <<"EOF"
<?php
$site_data = yaml_parse_file(__DIR__ . "/.devcontainer/local-dev-files/site-config.yml");
echo $site_data['default_environment'];
EOF
)
PANTHEON_SITE_URL="$SITE_ENV-$SITE_NAME.pantheonsite.io"
echo "Going to do search-replace of $PANTHEON_SITE_URL with $CODESPACE_URL...\n"
wp search-replace $PANTHEON_SITE_URL $CODESPACE_URL